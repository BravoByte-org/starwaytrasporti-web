{
	"name": "starwaytrasporti.com",
	"author": "BravoByteLLC <info@bravobyte.co>",
	"version": "0.1.0",
	"type": "module",
	"licence": "commons",
	"private": true,
	"scripts": {
		"START": "==============================================================",
		"dev": "vite dev",
		"BUILD": "==============================================================",
		"build:dev": "vite build --mode development",
		"build:staging": "vite build --mode staging",
		"build:production": "vite build --mode production",
		"PREVIEW": "==============================================================",
		"preview": "vite preview --mode development --port 4000",
		"preview:prod": "vite preview --mode production --port 4002",
		"CHECK": "==============================================================",
		"check": "svelte-kit sync && svelte-check",
		"check:watch": "svelte-kit sync && svelte-check --watch",
		"FORMAT": "==============================================================",
		"format": "prettier --write .",
		"LINT": "==============================================================",
		"lint": "prettier --check . && eslint .",
		"lint:svelte": "svelte-check",
		"lint:scripts": "eslint .",
		"lint:styles": "stylelint .",
		"lint:fix": "prettier --write . && eslint . --fix && stylelint --fix .",
		"TEST": "==============================================================",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:unit": "vitest --config .config/vitest.config.ts",
		"test:unit:ui": "vitest --config .config/vitest.config.ts --ui",
		"test:coverage": "vitest --config .config/vitest.config.ts --coverage",
		"test:watch": "vitest --config .config/vitest.config.ts --watch",
		"test:e2e": "playwright test --config .config/playwright.config.ts",
		"test:e2e:ui": "playwright test --config .config/playwright.config.ts --ui",
		"PREPARE": "==============================================================",
		"prepare": "husky",
		"precommit": "lint-staged",
		"commitlint": "commitlint --config .config/commitlint.config.ts --edit",
		"RELEASE": "==============================================================",
		"release": "release-it --config .config/release-it.config.ts --ci"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-vercel": "^5.6.3",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"config-conventional": "link:@@commitlint/config-conventional",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"release-it": "^19.0.6",
		"stylelint": "^16.25.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-config-tailwindcss": "^1.0.0",
		"stylelint-scss": "^6.12.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vercel": "^48.10.2",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@directus/sdk": "^20.1.1",
		"@directus/types": "^13.3.1",
		"mdsvex": "^0.12.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"release-it": {},
	"repository": "https://github.com/starwaytrasporti/starwaytrasporti.com",
	"engines": {
		"node": ">=22.13.0"
	}
}